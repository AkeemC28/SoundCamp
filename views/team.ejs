<%- include('partials/header') -%>

    <div class="row justify-content-center mt-5">
        <ul class="row list-unstyled">
            <% for(var i=0; i<members.length; i++) {%>
                <li>
                    <%= members[i].userName %>
                    <%= members[i].role %>
                        <form action="/removeFromTeam?_method=PUT" method="POST">
                            <input name="member" value="<%= members[i].id %>" type="hidden">
                            <button type="submit" id="">Remove From Team</button>
                        </form>
                </li>
                <% } %>
        </ul>
    </div>

    <%- include('partials/footer') -%>